<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#0e0603"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="60dp" />

    <ImageButton
        android:id="@+id/btnNgo"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@null"
        android:src="@drawable/ic_ngo"
        android:contentDescription="NGO Login"
        app:tint="#e9800a"
        app:layout_constraintTop_toBottomOf="@+id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/ngoLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am from NGO"
        android:textSize="16sp"
        android:textColor="#0e0603"
        app:layout_constraintTop_toBottomOf="@+id/btnNgo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <ImageButton
        android:id="@+id/btnUser"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@null"
        android:src="@drawable/ic_user"
        android:contentDescription="User Login"
        app:tint="#fca31f"
        app:layout_constraintTop_toBottomOf="@+id/ngoLabel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/userLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I am a User"
        android:textSize="16sp"
        android:textColor="#0e0603"
        app:layout_constraintTop_toBottomOf="@+id/btnUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="E-Android Developers"
        android:textColor="#0e0603"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
